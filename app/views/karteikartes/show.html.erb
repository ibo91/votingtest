<%- model_class = Karteikarte -%>
<div class="page-header">
  <h1><%=t '.title', :default => Karteikarte %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:titel) %></dt>
      <dd><pre class="prettyprint"><%= @karteikarte.titel %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:vorderseite) %></dt>
      <dd><pre class="prettyprint"><%= @karteikarte.vorderseite %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rueckseite) %></dt>
      <dd><pre class="prettyprint"><%= @karteikarte.rueckseite %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:durchschnittsbewertung) %></dt>
      <dd><pre class="prettyprint"><%= @karteikarte.durchschnittsbewertung %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              karteikartes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_karteikarte_path(@karteikarte), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              karteikarte_path(@karteikarte),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

