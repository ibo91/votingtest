<%- model_class = Karteikarte -%>
<div class="page-header">
  <h1><%=t '.title', :default => Karteikarte %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:titel) %></th>
      <th><%= model_class.human_attribute_name(:vorderseite) %></th>
      <th><%= model_class.human_attribute_name(:rueckseite) %></th>
      <th><%= model_class.human_attribute_name(:durchschnittsbewertung) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @karteikartes.each do |karteikarte| %>
      <tr>
        <td><%= karteikarte.id %></td>
        <td><%= karteikarte.titel %></td>
        <td><%= karteikarte.vorderseite %></td>
        <td><%= karteikarte.rueckseite %></td>
        <td><%= karteikarte.durchschnittsbewertung %></td>
        <td><%=l karteikarte.created_at, format: :long %></td>
        <td>
          <%= link_to karteikarte_path(karteikarte), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to karteikarte_path(karteikarte), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_karteikarte_path,
            :class => 'btn btn-primary' %>
